<div class="newpost-form-container">

    <div class="newpost-header-container">
        <button id="newpost-btn-back" class="newpost-btn">Назад</button>
        <span class="newpost-title"> Мой пост </span>
    </div>

    <form id="create-post" class="newpost-form">
        <div class="newpost-title-container">
            <div class="newpost-title-label-container">
                <label class="newpost-title-label">Название поста</label>
            </div>
            <div class="newpost-title-input-container">
                <textarea id="newpost-title-input" class="newpost-title-input"></textarea>
            </div>
            <div id="newpost-title-error" class="error"></div>
        </div>

        <div class="newpost-text-container">
            <div class="newpost-text-label-container">
                <label class="newpost-text-label">Текст</label>
            </div>
            <div class="newpost-text-input-container">
                <textarea id="newpost-text-input" class="newpost-text-input"></textarea>
            </div>
            <div id="newpost-text-error" class="error"></div>
        </div>
        <div class="input-file-container">
            <label class="input-file">
                <input type="file" name="file" id="attach-photo-download" accept="image/jpeg, image/png, image/webp">
                <span class="input-file-btn">Фото</span>
                <span class="input-file-text">jpeg, png, webp</span>
            </label>
            <label class="input-file">
                <input type="file" name="file" id="attach-video-download" accept="video/mp4, video/mpeg">
                <span class="input-file-btn">Видео</span>
                <span class="input-file-text">mp4, mpeg</span>
            </label>
            <label class="input-file">
                <input type="file" name="file" id="attach-music-download" accept="audio/mp3, audio/mpeg">
                <span class="input-file-btn">Аудио</span>
                <span class="input-file-text">mp3, mpeg</span>
            </label>
        </div>

        {{#each attachments}}


<!--                <img id="attach-photo" width="500" src="../../images/logo.png" alt="attach_photo">-->


        {{/each}}

        <div id="preview" class="preview">
<!--            <img id="file-preview">-->
        </div>


        <div class="newpost-btn-container">
            <button id="newpost-btn" class="newpost-btn">Опубликовать</button>
        </div>

    </form>
</div>
