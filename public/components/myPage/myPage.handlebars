<div class="myPage-header-container">
    {{#if is_my_page}}
        <img id="settings-icon" class="settings-icon" width="40" src="../../images/settings_icon.svg" alt="settings-icon">
    {{/if}}
    <h1 class="myPage-header"> <img id="user-photo" width="50" src="../../images/user_photo.png" alt="user-photo">{{creator_info.name}}</h1>
</div>
<div id="myPage">
    <div class="myPage-container">
        <div class="box-1">
            <div class="box1-btn-container">
                {{#if is_my_page}}
                    <button id="createPost-btn" class="subs-btn">Создать пост</button>
                {{else}}
                    <button id="subs-btn" class="subs-btn">Подписаться</button>
                {{/if}}
            </div>
            <div class="box1-info">
                <p class="box1-info-text">
                    <img id="circle-icon" width="10" src="../../images/circle_icon.png" alt="#">
                    Подписчиков:  {{creator_info.followers_count}}
                </p>
                <p class="box1-info-text">
                    <img id="circle-icon" width="10" src="../../images/circle_icon.png" alt="#">
                    Доход в месяц: 10000 Руб
                </p>
            </div>
            <div class="box1-info">
                <div class="box1-info-container">
                    <p>Цели</p>
                    {{#if edit_aim }}
                        <img id="pencil-icon-aim"  class="pencil-icon" width="20" src="../../images/edit_pencil_write_icon.png" alt="pencil-icon">
                    {{/if}}
                </div>
                <p>120 из
                {{#if false}}
                    500
                {{else}}
                        <input type="text">
                {{/if}}
                    рублей</p>
                {{#if true}}
                    <input type="button">
                {{/if}}
                {{#unless is_my_page}}
                    <button id="subs-btn-aim" class="subs-btn">Отправить донат</button>
                {{/unless}}
            </div>
        </div>
        <div class="box-2">
            <div class="aboutAuthor-container">
                <div class="aboutAuthor-container-header">
                    <h3>О моем блоге:</h3>
                    {{#if is_my_page}}
                        <img id="pencil-icon-about" class="pencil-icon" width="20" src="../../images/edit_pencil_write_icon.png" alt="pencil-icon">
                    {{/if}}
                </div>
                <h3>{{creator_info.description}}</h3>
            </div>
            {{#each posts}}
                <div class="post-container" id="{{id}}" title="{{title}}" slot="{{text}}">
                    <div class="post-container-header">
                        <h4 class="post-title">{{title}}</h4>
                        {{#if ../is_my_page}}
                            <img id="pencil-icon" class="pencil-icon" width="20" src="../../images/edit_pencil_write_icon.png" alt="pencil-icon">
                            <img id="delete-icon" class="delete-icon" width="25" src="../../images/delete_ic_icon.png" alt="delete-icon">
                        {{/if}}
                    </div>
                    {{#each textWithBreaks}}
                        <p class="post-text">{{text}}</p>
                    {{/each}}
                    <div class="post-footer-container">
                        <span class="like-container">
                            {{#if is_liked}}
                                <img id="love-like-icon" class="like-icon" width="27" src="../../images/love_like_icon.png" alt="love_like-icon">
                            {{else}}
                                <img id="like-icon" class="like-icon" width="25" src="../../images/like_icon.png" alt="like-icon">
                            {{/if}}
                            <span>{{likes_count}}</span>
                        </span>
                        <img id="comment-icon" class="comment-icon" width="25" src="../../images/comment_icon.png" alt="comment-icon">
                    </div>
                </div>
            {{/each}}
        </div>
        <div class="box-3">
            <div class="box3-header-container">
                <h3>Уровни подписки</h3>
                {{#if is_my_page}}
                    <img id="pencil-icon-level" class="pencil-icon" width="20" src="../../images/edit_pencil_write_icon.png" alt="pencil-icon">
                {{/if}}
            </div>
        </div>
    </div>
    <div id="footer">
        <hr style="opacity: 75%;">
        <h6>©️ 2023 4from5 All rights reserved. All trademarks are the property of their respective owners. <a href="https://t.me/averageqqq">TG</a></h6>
    </div>

</div>
