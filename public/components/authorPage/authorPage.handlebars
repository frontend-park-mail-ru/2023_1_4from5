<img src="../../images/author-photo.svg" class="author__photo" alt="creator photo">
<div id="author__header"></div>

<!------------------------------------------------------------------------------------------------->
<div class="author__container">

    <div class="auth__service">
        <div class="subscribers">
            <h1>{{creator_info.followers_count}}</h1>
            <h2>
                <img class="followers__img" src="../../images/followers.svg" alt="followers">
                подписчиков
            </h2>
        </div>

        <div id="{{creator_info.creator_id}}" class="support">
            {{#if isAuthorized}}
                {{#unless is_my_page}}
                    {{#if follows}}
                        <button id="unfollow__btn" class="support__btn follow__btn">
                            <p class="follow__btn--text">Перестать отслеживать</p>
                        </button>
                    {{else}}
                        <button id="follow__btn" class="support__btn follow__btn">
                            <img src="../../images/follow.svg" alt="follow">
                            <p class="follow__btn--text">Отслеживать</p>
                        </button>
                    {{/if}}
                    <button id="donate__btn" class="support__btn donate__btn">
                        <img src="../../images/donate.svg" alt="donate">
                        <p class="donate__btn--text">Отправить донат</p>
                    </button>
                {{/unless}}
            {{/if}}
        </div>

        <div class="aim">
            <p>Цель</p>
            <div class="aim__container">
                {{#if aim.description}}
                    <p class="aim__header">{{aim.money_got}} из {{aim.money_needed}} р
                        {{#if is_my_page}}
                            <img id="aim__edit" src="../../images/edit.svg" alt="edit">
                        {{/if}}
                    </p>
                    <p>{{aim.description}}</p>
                {{else}}
                    {{#if is_my_page}}
                        <img id="aim__add" class="aim__add" src="../../images/add.svg" alt="add">
                        <p class="text--default">У вас пока не выбрана цель</p>
                    {{else}}
                        <p class="text--default">У автора нет цели, есть только путь</p>
                    {{/if}}
                {{/if}}
            </div>
        </div>

        {{#if is_my_page}}
            <button id="create__post">Создать пост</button>
        {{/if}}

    </div>

    <!------------------------------------------------------------------------------------------------>
    <div class="auth__content">

        <div class="about">
            <h1 class="about__title">{{creator_info.name}}
                {{#if is_my_page}}
                    <img class="about__edit" src="../../images/edit.svg" alt="edit">
                {{/if}}
            </h1>
            <p class="about__description">{{creator_info.description}}</p>
        </div>

        <div class="subs">
            <div class="subs__title">
                <p class="subs__title--text">Уровни подписки</p>
                {{#if is_my_page}}
                    <img id="subs__add" class="subs__add" src="../../images/add.svg" alt="add">
                {{/if}}
            </div>

            <div class="sub__container">
                {{#if subscriptions}}
                    {{#each subscriptions}}
                        <div id="{{id}}" class="sub__card">
                            <div class="sub__title">
                                <h3 class="sub__title--text">{{title}}</h3>
                                {{#if ../is_my_page}}
                                    <img id="sub__delete" src="../../images/delete.svg" alt="delete">
                                {{/if}}
                            </div>
                            <p class="sub__description">{{description}}</p>
                            <div class="sub__cost">
                                <h1 class="cost">{{month_cost}}</h1>
                                <h2 class="rpm">р/месяц</h2>
                            </div>

                            {{#if ../is_my_page}}
                                <button id="sub__edit" class="sub__btn">
                                    <img class="sub__edit" src="../../images/pencil.png" alt="pencil">
                                    Изменить
                                </button>
                            {{else}}
                                {{#if isAuthorized}}
                                    <button class="sub__btn sub__buy">Оформить</button>
                                {{/if}}
                            {{/if}}
                        </div>
                    {{/each}}

                {{else}}
                    {{#if is_my_page}}
                        <p class="text--default">У вас пока нет ни одной подписки</p>
                    {{else}}
                        <p class="text--default">У автора пока нет ни одной подписки</p>
                    {{/if}}
                {{/if}}
            </div>
        </div>

        <div class="posts">
            {{#if posts}}
                {{#each posts}}
                    <div id="{{id}}" class="post__container">
                        <div class="post__header">
                            <div class="post__privacy">
                                <img class="privacy__img" src="../../images/privacy.svg" alt="privacy">
                                {{#if subscriptions}}
                                    Только для подписчиков
                                {{else}}
                                    Открыт для всех
                                {{/if}}
                            </div>
                            <div class="post__date">
                                {{#if ../is_my_page}}
                                    <img id="edit__post" class="edit__img" src="../../images/edit.svg" alt="edit">
                                    <img id="delete__post" class="delete__img" src="../../images/delete.svg"
                                         alt="delete">
                                {{/if}}
                                <p>{{creation_date}}</p>
                            </div>
                        </div>

                        <div class="post__content">
                            <h2 class="content__header">{{title}}</h2>
                            {{#each textWithBreaks}}
                                <p>{{text}}</p>
                                <!--TODO attachments-->
                            {{/each}}
                            {{#each attachments}}
                                <audio id="audio" src="../../images/music_test.mp3" controls></audio>
                                <video id="video" width="500" src="../../images/video_test.mp4" controls></video>
                                <img id="attach-photo" width="500" src="../../images/logo.png" alt="attach_photo">
                                <input type="file" class="upload" id="attach-photo-upload"/>
                            {{/each}}

                            <div class="feedback">
                                <div class="likes">
                                    {{#if ../is_my_page}}
                                        <img id="disable-like-icon" class="icon--like"
                                             src="../../images/disable_like_icon.png" alt="like--disable">
                                    {{else}}
                                        {{#if is_liked}}
                                            <img id="love-like-icon" class="icon--like"
                                                 src="../../images/love_like_icon.png" alt="like--liked">
                                        {{else}}
                                            <img id="like-icon" class="icon--like" src="../../images/like_icon.png"
                                                 alt="like--enable">
                                        {{/if}}
                                    {{/if}}
                                    {{likes_count}}
                                </div>

                                <div class="comments">
                                    <img class="icon--comments" src="../../images/comment_icon.png" alt="comment">
                                    0
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}

            {{else}}
                <div class="posts--nothing">
                    <p>Вы пока не добавили ни одного поста</p>
                </div>
            {{/if}}
        </div>
    </div>
</div>
