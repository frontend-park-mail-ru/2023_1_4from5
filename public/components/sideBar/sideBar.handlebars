<div id="sideBar" class="sidebar">
    <div class="sidebar__logo--container">
        <img class="sidebar__logo clickable" id="logo" src="../../images/logo.png" alt="logo">
        <img class="sidebar__logo--fav clickable" id="logo--small" src="../../images/favicon.ico" alt="logo">
    </div>
    <div class="sidebar__info sidebar__media--1000px">
        {{#if about.showDisplay}}
            <div class="sidebar__about">
                <a id="{{about.id}}" class="sidebar__about--element hover--underline"
                   href={{abput.href}}>
                    О нас
                </a>
            </div>
        {{/if}}

        {{#if beAuthor.showDisplay}}
            <div>
                <a id="{{beAuthor.id}}" class="sidebar__element become-author hover--underline sidebar__media--1000px"
                   href={{beAuthor.href}}> Стать автором </a>
            </div>
        {{/if}}
    </div>

    <div class="sidebar__authors">
        {{#if findAuth.showDisplay}}
            <a id="{{findAuth.id}}" class="sidebar__element hover--underline sidebar__media--1000px"
               href={{findAuth.href}}> Авторы </a>
            <input class="sidebar__input sidebar__element" id="find__input" type="text" placeholder="Поиск авторов">
        {{/if}}
    </div>

    <div class="sidebar__user">
        {{#if feed.showDisplay}}
            <span class="sidebar__feed sidebar__media--1300px">
                <a id="{{feed.id}}" class="sidebar__feed--elem sidebar__element hover--underline" href={{feed.href}}> Лента </a>
            </span>
        {{/if}}

        {{#if subs.showDisplay}}
            <span class="sidebar__subs sidebar__media--1300px">
                <a id="{{subs.id}}" class="sidebar__subs--elem sidebar__element hover--underline" href={{subs.href}}> Подписки </a>
            </span>
        {{/if}}

        {{#if reg.showDisplay}}
            <div>
                <a id="{{reg.id}}" class="sidebar__reg sidebar__element hover--underline" href={{reg.href}}>
                    Регистрация </a>
            </div>
        {{/if}}

        {{#if auth.showDisplay}}
            <div>
                <a id="{{auth.id}}" class="sidebar__auth sidebar__element hover--underline" href={{auth.href}}> Войти </a>
            </div>
        {{/if}}
        {{#if notifications.showDisplay}}
            <a id="{{notifications.id}}">
                {{#if are_notifications}}
                    <img id="sidebar__notifications"
                         class="sidebar__notification sidebar__element sidebar__media--1300px clickable"
                         src="../../images/notification.svg" alt="">
                {{else}}
                    <img id="sidebar__notifications"
                         class="sidebar__notification sidebar__element sidebar__media--1300px clickable"
                         src="../../images/no_notifications.svg" alt="">
                {{/if}}
            </a>
        {{/if}}

        {{#if modalWindow.showDisplay}}

            <img id="sidebar__user--photo" class="sidebar__user--photo sidebar__element img__border" alt="">

            <div class="sidebar__user--container">
                <a id="{{modalWindow.id}}" class="sidebar__user--name sidebar__element hover--underline"
                   href={{modalWindow.href}}> {{modalWindow.name}} </a>
            </div>
        {{/if}}
        <a id="sidebar__menu">
            <img class="sidebar__menu" src="../../images/menu.svg" alt="">
        </a>
    </div>
</div>
