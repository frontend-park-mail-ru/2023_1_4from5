<div class="subscriptions">
    <div class="subscriptions__chapters">
        <p class="chapters__title">Подписки</p>
        <p id="chapter--paid" class="chapter">Платные подписки</p>
        <p id="chapter--follow" class="chapter">Отслеживается</p>
    </div>

    {{#if isPaid}}
        {{#if subs}}
            <div class="subscriptions__container">
                {{#each subs}}
                    <div id="{{id}}" class="subs__card">
                        <div id="{{creator}}" class="subs__info--container">
                            <img id="subs__photo" class="subs__photo img__border clickable"
                                 style="background-image: url(../../images/user/{{creator_photo}}.jpg)" alt="">
                            <h3 id="{{creator}}" class="subs__creator clickable">{{creator_name}}</h3>

                            <div class="subs__info">
                                <p class="subs__info--title">{{title}}</p>
                                <h2 class="month__cost--container">
                                    <p id="month__cost">{{month_cost}}</p>
                                    <p>р/месяц</p>
                                </h2>
                            </div>
                        </div>

                        <button id="subs__extend" class="subs__extend">Продлить</button>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <div class="no-subs__container">
                <p class="subs__no-subs">Вы не оформили ни одной подписки</p>
            </div>
        {{/if}}

    {{else}}
        {{#if follows}}
            <div class="subscriptions__container">
                {{#each follows}}
                    <div id="{{creator}}" class="subs__card">
                        <div id="{{creator}}" class="subs__info--container">
                            <img id="subs__photo" class="subs__photo img__border clickable"
                                 style="background-image: url(../../images/user/{{creator_photo}}.jpg)" alt="">
                            <h3 id="{{creator}}" class="subs__creator follow__creator clickable">{{creator_name}}</h3>
                            <div style="display: none"></div>
                        </div>

                        <button id="subs__disfollow" class="subs__disfollow">Отписаться</button>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <div class="no-subs__container">
                <p class="subs__no-subs">Вы не отслеживаете ни одного автора</p>
            </div>
        {{/if}}
    {{/if}}
</div>
