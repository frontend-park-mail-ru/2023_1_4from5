            </select>
        </label>
        <button id="select_date__show_button" class="select_date__show_button">Показать</button>
    </div>

    <div class="statistics__interval">
        {{#each statisticsIntervalList}}
            <div class="statistics__card">
                <div class="card__icon">
                    <img src="../../images/{{card_icon}}" width="25" alt="statistics_icon">
                </div>
                <div>{{count}}</div>
                <div>{{description}}</div>
            </div>
        {{/each}}
