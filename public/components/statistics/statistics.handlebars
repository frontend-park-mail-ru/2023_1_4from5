<div class="statistics">
    <div class="statistics__total">
        {{#each statisticsTotalList}}
            <div class="statistics__card">
                <div class="card__icon">
                    <img src="../../images/{{card_icon}}" width="25" alt="statistics_icon">
                </div>
                <div>{{count}}</div>
                <div>{{description}}</div>
            </div>
        {{/each}}
        {{#each statisticsTotalListMoney}}
            <div class="statistics__card">
                <div>{{count}} ₽</div>
                <div>{{description}}</div>
            </div>
        {{/each}}
    </div>

    <div class="statistics__select_date">
